#!/bin/sh

im $OWNER || Forbidden

chords_path=$DOCUMENT_ROOT/items/chords/items

if test $REQUEST_METHOD = POST; then
	list_ops() {
		ls $DOCUMENT_ROOT/tmp/mpfd/remove-* 2>/dev/null | sed 's/.*-//' | while read line; do echo -d\"$line\"; done
		ls $DOCUMENT_ROOT/tmp/mpfd/add-* 2>/dev/null | sed 's/.*-//' | while read line; do echo -p\"$line\"; done
	}

	test `list_ops | wc -l` -lt 1 || \
		list_ops | xargs -I {} qhash {} songs.db

	cp $DOCUMENT_ROOT/tmp/mpfd/format format
	rm format.db 2>/dev/null || true

	cat format | while read name; do
		test ! -z "$name" || continue
		echo -p\"$name\"
	done | xargs -I {} qhash {} format.db

	SeeOther ./
fi

checkboxes() {
	local label=$1
	while read id link flags title; do
		# echo $label $id $link $flags $title >&2
		cat <<!
<label class='h f'>
	<input type='checkbox' name='$label-$link $flags $title'></input>
	$title
</label>
!
	done
}

list_missing() {
	test -f songs.db && \
		qhash -q songs.db -L $chords_path/index.db
		qhash -l $chords_path/index.db
}

cat <<!
<form action='.' method='POST' class='p sf f v' enctype='multipart/form-data'>
<h4>Format</h4>
<textarea name='format' style='height: 20vh; white-space: pre;'>
`cat format`
</textarea>
<div class="h f" style="max-height: 50vh; overflow: auto">
	<div class="v shf">
		<h4>`_ "Songs to remove"`</h4>
	</div>
	<div class="v shf">
		<h4>`_ "Songs to add"`</h4>
	</div>
</div>
<div class="h f">
	<div class="v shf" style="max-height: 50vh; overflow: auto">
`qhash -l songs.db | checkboxes remove`
	</div>
	<div class="v shf" style="max-height: 50vh; overflow: auto">
`list_missing | checkboxes add`
	</div>
</div>
<button>`_ Submit`</button>
!
